# Tell bundler where to fetch gems
source 'https://rubygems.org'

# Tell heroku and bundler which version of ruby to use
ruby '2.1.4'

# Gems used by all environments (development, production & test)
gem 'sinatra'
gem 'sinatra-partial'
gem 'data_mapper'
gem 'slim'
gem 'tilt', '~> 1.4.1' #temporary fix
gem 'racksh'
gem 'rack-flash3'
gem 'json'
gem 'rerun'
gem 'bcrypt', '~> 3.1.12' #Temporary fix, required as bcrypt 3.1.10 results in a hashing error when trying to seed

# Use SQLite
gem 'dm-sqlite-adapter', group: :development

